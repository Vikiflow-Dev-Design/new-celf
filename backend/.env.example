# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URLs
FRONTEND_URL=http://localhost:3000
MOBILE_URL=http://localhost:8081

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/celf-mining
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/celf-mining?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@celfmining.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Mining Configuration
MINING_DEFAULT_ALGORITHM=sha256
MINING_DEFAULT_DIFFICULTY=1
MINING_MAX_THREADS=32
MINING_DEFAULT_POOL_URL=stratum+tcp://pool.example.com:4444

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# External APIs (if needed)
COINBASE_API_KEY=
BINANCE_API_KEY=
BINANCE_API_SECRET=

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-data-api-v3-key
YOUTUBE_CHANNEL_ID=your-youtube-channel-id
YOUTUBE_CHANNEL_HANDLE=@your-channel-handle

# Instagram Graph API Configuration
INSTAGRAM_ACCESS_TOKEN=your-instagram-long-lived-access-token
INSTAGRAM_USER_ID=your-instagram-business-user-id
